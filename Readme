

##RAZ

python3 -m venv myenv && pip install -r requirements.txt


##ZAFSZE 

source myenv/Scripts/activate

#Transktrypcja
python code/video_transcription_cli.py "2. RiSO - przem w uklad stat wyz/przykład1.avi"

#Tłumaczenie
python code/translate.py "3.SW-belki-cz1/#przyklad1-do-tlumaczenia.txt" "3.SW-belki-cz1/text/przykład1_sentences_en.txt" 

#Genreacja
python code/generate.py "2. RiSO - przem w uklad stat wyz/text/przykład1_sentences_en.txt"  "2. RiSO - przem w uklad stat wyz/przykład1.avi" 
#Generacja from start to end (może być tylko --start_time lub --end_time)
python code/generate-part.py "3.SW-belki-cz1/text/przykład1_sentences_en.txt"  "3.SW-belki-cz1/calosc.mp4" --end_time 2001


#Tworzenie video
python code/overlay.py "2. RiSO - przem w uklad stat wyz/text/przykład1_sentences_en.txt" "2. RiSO - przem w uklad stat wyz/przykład1.avi"  --audio_dir generated
#Tworzenie video from start to end
python code/overlay-part.py "3.SW-belki-cz1/text/przykład2_sentences_en.txt" "3.SW-belki-cz1/calosc.mp4"  --audio_dir generated --end_time 2001

#Czyszczenie wideo z ciszy i bezruchu
python code/delete-silent.py "3.SW-belki-cz1/output/calosc_synchronized.mp4" "3.SW-belki-cz1/output/calosc_cleaned.mp4" --min_silence_len 1500 --min_static_duration 1.5

#Podmiana napisów NA WIDEO z polskich na angielskie (parametry na końcu w [s])
python code/videotext-pol-to-eng.py "4.SW-belki-cz2/output/calosc_synchronized.mp4" "4.SW-belki-cz2/output/calosc_eng.mp4" 10 35 65